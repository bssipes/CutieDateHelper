<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JulianConverterActivity" >
    
	<EditText
	    android:id="@+id/j2g_et"
	    android:inputType="number"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="Enter the Julian Day to convert" />

	<Button
	    android:id="@+id/j2g_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:onClick="convert"
	    android:text="Convert" />

	<TextView
	    android:id="@+id/convertedDate"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="converted date will display here" />
	
	<EditText
	    android:id="@+id/add_et"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="Add days to the converted date" />
	<Button
	    android:id="@+id/add_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="Add" />
	<TextView
	    android:id="@+id/finalDate"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="final date" />
</LinearLayout>