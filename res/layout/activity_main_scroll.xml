<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

<!-- Welcome Message -->
        <TextView
            android:id="@+id/DisplayStoreNumber_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="divisionName" />

<!-- Today's dates -->
        <TextView
            android:id="@+id/gregorian_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="gregorianDate" />

        <TextView
            android:id="@+id/julian_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="julianDate" />

<!-- Gen2 Product Dates -->
        <TextView
            android:id="@+id/gen2_chilicheese_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="chilicheseDate" />
        
        <TextView
            android:id="@+id/gen2_whippedTopper_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="whippedTopperDate" />

        <TextView
            android:id="@+id/gen2_wallcoolerpizzas_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="wallcoolerpizzasDate" />

        <TextView
            android:id="@+id/gen2_grillfood_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="grillfoodDate" />

        <TextView
            android:id="@+id/gen2_hotzis_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="hotzisDate" />

        <TextView
            android:id="@+id/gen2_wallcoolerburritos_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="wallcoolerburritosDate" />

        <TextView
            android:id="@+id/gen2_wallcoolerhotpockets_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="wallcoolerhotpocketsDate" />

        <TextView
            android:id="@+id/gen2_nemo_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="nemoDate" />
<!-- Can I bold this somehow? -->        
        <TextView
            android:id="@+id/gen3_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="gen3_header" />
    </LinearLayout>

</ScrollView>