<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Manual Julian Calculator -->

        <TextView
            android:id="@+id/mjc_header_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\nManual Converter + Calculator"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mjc_orig_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Initial Julian or MM/DD/YYYY Date" />

        <EditText
            android:id="@+id/mjc_plus_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Days to add"
            android:inputType="number" />

        <Button
            android:id="@+id/mjc_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addmjc"
            android:text="Add / Convert" />

        <TextView
            android:id="@+id/mjc_final_j_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="final date (julian)" />

        <TextView
            android:id="@+id/mjc_final_g_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="final date (gregorian)" />

        <TextView
            android:id="@+id/mcc_greeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mcc_greeting" />
        
    </LinearLayout>
</ScrollView>