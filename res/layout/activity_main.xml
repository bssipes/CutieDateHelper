<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

<!-- Welcome Message -->
    <TextView
        android:id="@+id/gen2_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gen2_welcome" />

    <TextView
        android:id="@+id/DisplayStoreNumber_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gen2_welcome"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/gen2_welcome"
        android:text="divisionName here" />
    
<!-- Today's dates -->
    <TextView
        android:id="@+id/gregorian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gen2_welcome"
        android:layout_below="@+id/gen2_welcome"
        android:layout_marginTop="40dp"
        android:text="@string/gregorian" />
    <TextView
        android:id="@+id/gregorian_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gregorian"
        android:layout_alignLeft="@+id/DisplayStoreNumber_TV" />

    <TextView
        android:id="@+id/julian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gen2_welcome"
        android:layout_below="@+id/gen2_welcome"
        android:layout_marginTop="80dp"
        android:text="@string/julian" />
    <TextView
        android:id="@+id/julian_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/julian"
        android:layout_alignLeft="@+id/gregorian_TV" />

<!-- Chili and Cheese -->
    <TextView
        android:id="@+id/gen2_chilicheese_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gen2_welcome"
        android:layout_below="@+id/gen2_welcome"
        android:layout_marginTop="120dp"
        android:text="@string/gen2_chilichese" />
    <TextView
        android:id="@+id/gen2_chilicheese_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DisplayStoreNumber_TV"
        android:layout_alignBottom="@+id/gen2_chilicheese_label"
        android:text="chilicheseDate" />
    
<!-- WallCooler Pizzas -->
    <TextView
        android:id="@+id/gen2_wallcoolerpizzas_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gen2_welcome"
        android:layout_below="@+id/gen2_welcome"
        android:layout_marginTop="160dp"
        android:text="@string/gen2_wallcoolerpizzas" />
    <TextView
        android:id="@+id/gen2_wallcoolerpizzas_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gen2_wallcoolerpizzas_label"
        android:layout_alignLeft="@+id/DisplayStoreNumber_TV"
        android:text="wallcoolerpizzasDate" />

<!-- Backstock Grillfood -->
    <TextView
        android:id="@+id/gen2_grillfood_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gen2_welcome"
        android:layout_below="@+id/gen2_welcome"
        android:layout_marginTop="200dp"
        android:text="@string/gen2_grillfood" />
    <TextView
        android:id="@+id/gen2_grillfood_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gen2_grillfood_label"
        android:layout_alignLeft="@+id/DisplayStoreNumber_TV"
        android:text="grillfoodDate" />
    
<!-- Hotzis -->
    <TextView
        android:id="@+id/gen2_hotzis_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gen2_welcome"
        android:layout_below="@+id/gen2_welcome"
        android:layout_marginTop="240dp"
        android:text="@string/gen2_hotzis" />
    <TextView
        android:id="@+id/gen2_hotzis_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gen2_hotzis_label"
        android:layout_alignLeft="@+id/DisplayStoreNumber_TV"
        android:text="hotzisDate" />  
        
<!-- WallCooler Frozen Burritos -->
    <TextView
        android:id="@+id/gen2_wallcoolerburritos_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gen2_welcome"
        android:layout_below="@+id/gen2_welcome"
        android:layout_marginTop="280dp"
        android:text="@string/gen2_wallcoolerburritos" />
    <TextView
        android:id="@+id/gen2_wallcoolerburritos_date"
