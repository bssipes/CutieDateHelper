        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gen2_wallcoolerburritos_label"
        android:layout_alignLeft="@+id/DisplayStoreNumber_TV"
        android:text="wallcoolerburritosDate" />

<!-- WallCooler Hot Pockets -->
    <TextView
        android:id="@+id/gen2_wallcoolerhotpockets_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gen2_welcome"
        android:layout_below="@+id/gen2_welcome"
        android:layout_marginTop="320dp"
        android:text="@string/gen2_wallcoolerhotpockets" />
    <TextView
        android:id="@+id/gen2_wallcoolerhotpockets_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gen2_wallcoolerhotpockets_label"
        android:layout_alignLeft="@+id/DisplayStoreNumber_TV"
        android:text="wallcoolerhotpocketsDate" />
    
<!-- Nemo Cakes -->
    <TextView
        android:id="@+id/gen2_nemo_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gen2_welcome"
        android:layout_below="@+id/gen2_welcome"
        android:layout_marginTop="360dp"
        android:text="@string/gen2_nemo" />
    <TextView
        android:id="@+id/gen2_nemo_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gen2_nemo_label"
        android:layout_alignLeft="@+id/DisplayStoreNumber_TV"
        android:text="nemoDate" />
</RelativeLayout>